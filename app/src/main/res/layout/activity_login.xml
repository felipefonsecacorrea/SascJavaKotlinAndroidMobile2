<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:padding="0dp"
        android:background="#FFFFFF">

    <ImageView
            android:layout_width="450dp"
            android:layout_height="420dp" app:srcCompat="@drawable/verdefundo" android:id="@+id/verde_fundo"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.01" android:layout_marginTop="-50dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp" app:srcCompat="@drawable/brancofundo" android:id="@+id/branco_fundo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="-10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:paddingStart="-10dp" android:paddingEnd="-10dp"/>
    <TextView
            android:text="Senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/titulo_senha"
            android:textSize="20dp"
            android:fontFamily="@font/titilliumweb_light" app:layout_constraintTop_toBottomOf="@+id/campo_email"
            android:layout_marginTop="8dp"
            android:textColor="#11724F" app:layout_constraintEnd_toEndOf="@+id/branco_fundo"
            app:layout_constraintStart_toStartOf="@+id/branco_fundo" app:layout_constraintHorizontal_bias="0.171"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="******"
            android:textColorHint="#8F8F8F"
            android:background="@drawable/style_card"
            android:paddingStart="10dp"

            android:id="@+id/campo_senha"
            app:layout_constraintTop_toBottomOf="@+id/campo_email"
            android:layout_marginTop="40dp" app:layout_constraintEnd_toEndOf="@+id/branco_fundo"
            app:layout_constraintStart_toStartOf="@+id/branco_fundo"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="exemplo@email.com"

            android:id="@+id/campo_email"
            app:layout_constraintTop_toBottomOf="@+id/titulo_email"
            android:textColorHint="#8F8F8F"
            app:layout_constraintStart_toStartOf="@+id/branco_fundo"
            app:layout_constraintEnd_toEndOf="@+id/branco_fundo" app:layout_constraintHorizontal_bias="0.495"
            android:background="@drawable/style_card" android:paddingStart="15dp"/>
    <TextView
            android:text="E-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/titulo_email"
            android:textSize="20dp"
            android:fontFamily="@font/titilliumweb_light"
            android:textColor="#11724F"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/branco_fundo"
            app:layout_constraintEnd_toEndOf="@+id/branco_fundo" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.183"/>
    <Button
            android:text="Entrar"
            android:textAllCaps="false"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/btnEntrar"
            android:fontFamily="@font/titilliumweb_bold"
            android:textSize="20dp"

            app:layout_constraintTop_toBottomOf="@+id/campo_senha" android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/branco_fundo"
            app:layout_constraintStart_toStartOf="@+id/branco_fundo" app:layout_constraintVertical_bias="0.092"
            app:layout_constraintHorizontal_bias="0.498"
            android:background="@drawable/style_card2"/>
    <ImageView
            android:layout_width="110dp"
            android:layout_height="91dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/branco_fundo"
            app:layout_constraintStart_toStartOf="@+id/branco_fundo"
            app:layout_constraintEnd_toEndOf="@+id/branco_fundo" android:layout_marginTop="100dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="@string/texto_login"
            android:layout_width="328dp"
            android:layout_height="143dp" android:id="@+id/textoLogin"
            android:textColor="@color/white" android:textSize="27sp"
            android:textAlignment="viewStart" android:fontFamily="@font/titilliumweb_bold"
            app:layout_constraintTop_toTopOf="@+id/verde_fundo" app:layout_constraintEnd_toEndOf="@+id/verde_fundo"
            app:layout_constraintStart_toStartOf="@+id/verde_fundo" android:layout_marginTop="52dp"
            app:layout_constraintHorizontal_bias="0.512"/>
    <ImageView
            android:layout_width="201dp"
            android:layout_height="158dp" app:srcCompat="@drawable/maofundo" android:id="@+id/imgamao"
            app:layout_constraintTop_toBottomOf="@+id/textoLogin"
            android:layout_marginTop="17dp" app:layout_constraintStart_toStartOf="@+id/verde_fundo"
            app:layout_constraintEnd_toEndOf="@+id/verde_fundo"
            app:layout_constraintBottom_toBottomOf="@+id/verde_fundo" app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintVertical_bias="0.0"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>


</androidx.constraintlayout.widget.ConstraintLayout>